{
  "title": "IXFI Protocol Documentation",
  "description": "Comprehensive documentation for the IXFI cross-chain protocol",
  "author": "IXFI Team",
  "language": "en",
  "gitbook": ">=3.2.0",
  "logo": "ixfi-logo.png",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },
  "plugins": [
    "mermaid",
    "code",
    "hints",
    "tabs",
    "expandable-chapters",
    "search-plus",
    "katex",
    "github",
    "copy-code-button",
    "-sharing",
    "-fontsettings"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/DINetworks/IXFI-Contracts"
    },
    "mermaid": {
      "theme": "default",
      "flowchart": {
        "useMaxWidth": true,
        "htmlLabels": true
      },
      "sequence": {
        "showSequenceNumbers": true,
        "diagramMarginX": 50,
        "diagramMarginY": 10
      }
    }
  },
  "pdf": {
    "fontSize": 12,
    "footerTemplate": null,
    "headerTemplate": null,
    "margin": {
      "bottom": 36,
      "left": 62,
      "right": 62,
      "top": 36
    },
    "pageNumbers": false,
    "paperSize": "a4"
  }
}
